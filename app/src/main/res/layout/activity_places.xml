<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.PlacesActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >

        <ListView
            android:id="@+id/lvPlacesAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <TextView
            android:id="@+id/txtPlacesAct_NoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_no_data"
            android:layout_gravity="center"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPlaceAct_AddNewPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:src="@mipmap/plus"/>

    </FrameLayout>


    <Button
        android:id="@+id/btnPlaceAct_ShowAllOnMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/text_show_all_places_all_map"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"/>


</LinearLayout>